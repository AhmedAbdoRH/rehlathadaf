rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /domains/{domainId} {
      // السماح بالقراءة والكتابة لأي مستخدم أثناء التطوير
      // في بيئة الإنتاج، يجب تقييد هذا الوصول للمستخدمين المصادق عليهم فقط
      allow read, write: if true;
    }
  }
}
